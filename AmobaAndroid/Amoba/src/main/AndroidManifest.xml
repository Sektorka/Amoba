<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="amoba.end.hu" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="amoba.end.hu.StartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="amoba.end.hu.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="amoba.end.hu.NewGame"
            android:configChanges="orientation"
            android:label="@string/title_activity_new_game"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="amoba.end.hu.SettingsActivity"
            android:configChanges="orientation"
            android:label="@string/settingsTitle"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="amoba.end.hu.AboutActivity"
            android:configChanges="orientation"
            android:label="@string/aboutTitle"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="amoba.end.hu.NotStartedMatchesActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_not_started_matches"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="amoba.end.hu.PlayedGamesActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_played_games"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="amoba.end.hu.ChatActivity"
            android:configChanges="orientation"
            android:label="@string/chatTitle"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>
